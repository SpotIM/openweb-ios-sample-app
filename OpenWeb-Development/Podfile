platform :ios, '11.0'
inhibit_all_warnings!

abstract_target 'Shared' do
  use_frameworks! :linkage => :static

  pod 'RxSwift', '~> 6.5'
  pod 'RxCocoa', '~> 6.5'
  
  target 'OpenWeb-SDK'

  target 'OpenWeb-SampleApp' do
    pod 'SnapKit', '~> 5.6.0'
    pod 'Google-Mobile-Ads-SDK', '= 8.0'
    pod 'Alamofire', '~> 5.6.2'
    pod 'FirebaseCrashlytics', '~> 10.15.0'
  end

  target 'OpenWeb-SDKTests' do
    pod 'Quick', '~> 5.0.1'
    pod 'Nimble', '~> 10.0.0'
  end
end

post_install do |installer|
  fix_deployment_target(installer)
  set_bitcode_generation_mode(installer)
  enable_bitcode(installer)
end

def fix_deployment_target(installer)
  return if !installer
  project = installer.pods_project
  project_deployment_target = project.build_configurations.first.build_settings['IPHONEOS_DEPLOYMENT_TARGET']

  puts "Make sure all pods deployment target is #{project_deployment_target.green}"
  project.targets.each do |target|
    puts "  #{target.name}".blue
    target.build_configurations.each do |config|
      old_target = config.build_settings['IPHONEOS_DEPLOYMENT_TARGET']
      new_target = project_deployment_target
      next if old_target == new_target
      puts "    #{config.name}: #{old_target.yellow} -> #{new_target.green}"
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = new_target
    end
  end
end

def set_bitcode_generation_mode(installer)
  return if !installer
  project = installer.pods_project

  puts "Setting `BITCODE_GENERATION_MODE` flag to `bitcode` in all dependencies pods"
  project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['BITCODE_GENERATION_MODE'] = 'bitcode'
    end
  end
end

def enable_bitcode(installer)
  return if !installer
  project = installer.pods_project

  puts "Setting `ENABLE_BITCODE` flag to `YES` in all dependencies pods"
  project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['ENABLE_BITCODE'] = 'YES'
    end
  end
end
