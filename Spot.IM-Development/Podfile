platform :ios, '10.3'
inhibit_all_warnings!

project 'Spot-IM.Development.xcodeproj', {
  'Debug' => :debug,
  'DebugWithAds' => :debug,
}

ads_configurations = ['ReleaseWithAds', 'DebugWithAds']
debug_configurations = ['Debug', 'DebugWithAds']

abstract_target 'Shared' do
  use_frameworks!

  pod 'Alamofire', '~> 5.2'
  pod 'PromiseKit', '~> 6.8'
  target 'SpotImNoAds'

  abstract_target 'DemoApps' do
    pod 'SnapKit', '~> 4.2.0'
    pod 'Cards'
    pod 'Kingfisher'

    pod 'Fabric'
    pod 'Crashlytics'

    pod 'Reveal-SDK', :configurations => debug_configurations

    target 'Spot-IM.Development'
    target 'YentSpot'
    target 'DailyCaller'
    target 'Focus.de'
    target 'MarketWatch'
  end

  target 'SpotImCore' do
#    pod 'SwiftLint', '~> 0.34.0', :configurations => debug_configurations
    # Pods for configurations with google ads
    pod 'Google-Mobile-Ads-SDK', '= 7.64', :configurations => ads_configurations
  end

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['BITCODE_GENERATION_MODE'] = 'bitcode'
    end
  end
end
